{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Simple URCL Syntax",
	"scopeName": "source.redcmd.syntax.urclpp",
	"injections": {
		"L:loop.urclpp": {
			"comment": "Injectins will inject themselves into every nested level of the target scope",
			"patterns": [
				{ "include": "#EXIT" },
				{ "include": "#SKIP" }
			]
		}
	},
	"patterns": [
		{ "include": "#IF"				},
		{ "include": "#FOR"				},
		{ "include": "#WHILE"			},
		{ "include": "#SWITCH"			},
		{ "include": "#preprocessor"	},
		{ "include": "#parenthesis"		},
		{ "include": "#label"			},
		{ "include": "#function"		},
		{ "include": "#invalid"			},
		{ "include": "source.redcmd.syntax.simple.urcl" }
	],
	"repository": {
		"preprocessor": {
			"match": "\\b(?i:LCAL|DEFINE|OUTS|OPS|REG|TEMP|IMPORT)\\b",
			"name": "keyword.control"
		},
		"IF": {
			"begin": "\\b(?i:IF)\\b",
			"end": "\\b(?i:END)\\b",
			"captures": { "0": { "name": "keyword.control" } },
			"patterns": [
				{ "include": "#ELIF" },
				{ "include": "#ELSE" },
				{ "include": "$self" }
			]
		},
		"ELIF": {
			"begin": "\\b(?i:ELIF)\\b",
			"end": "(?=\\b(?i:END)\\b)",
			"captures": { "0": { "name": "keyword.control" } },
			"patterns": [
				{ "include": "#ELIF" },
				{ "include": "#ELSE" },
				{ "include": "$self" }
			]
		},
		"ELSE": {
			"begin": "\\b(?i:ELSE)\\b",
			"end": "(?=\\b(?i:END)\\b)",
			"captures": { "0": { "name": "keyword.control" } },
			"patterns": [ { "include": "$self" } ]
		},
		"FOR": {
			"begin": "\\b(?i:FOR)\\b",
			"end": "\\b(?i:END)\\b",
			"contentName": "loop.urclpp",
			"captures": { "0": { "name": "keyword.control" } },
			"patterns": [ { "include": "$self" } ]
		},
		"WHILE": {
			"begin": "\\b(?i:WHILE)\\b",
			"end": "\\b(?i:END)\\b",
			"contentName": "loop.urclpp",
			"captures": { "0": { "name": "keyword.control" } },
			"patterns": [ { "include": "$self" } ]
		},
		"EXIT": {
			"match": "\\b(?i:EXIT)\\b",
			"name": "keyword.control"
		},
		"SKIP": {
			"match": "\\b(?i:SKIP)\\b",
			"name": "keyword.control"
		},
		"SWITCH": {
			"begin": "\\b(?i:SWITCH)\\b",
			"end": "\\b(?i:END)\\b",
			"captures": { "0": { "name": "keyword.control" } },
			"patterns": [
				{
					"match": "\\b(?i:DEFAULT|CASE)\\b",
					"name": "keyword.control"
				},
				{ "include": "$self" }
			]
		},
		"function": {
			"begin": "(\\w+(?>\\.\\w+)*)\\s*\\(",
			"end": "\\)",
			"beginCaptures": {
				"1": {
					"patterns": [
						{
							"match": "\\w+",
							"name": "support.function regex"
						}
					]
				}
			},
			"patterns": [ { "include": "$self" } ]
		},
		"parenthesis": {
			"begin": "\\(",
			"end": "\\)",
			"captures": { "0": { "name": "parenthesis.urclpp" } },
			"patterns": [ { "include": "$self" } ]
		},
		"label": {
			"match": "(?<!\\w)(?>\\.\\w+)+",
			"name": "support.function"
		},
		"invalid": {
			"match": "\\b(?i:EXIT|SKIP|DEFAULT|CASE)\\b",
			"name": "invalid"
		}
	}
}