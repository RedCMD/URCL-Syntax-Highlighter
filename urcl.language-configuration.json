{
	"comments": {
		// symbol used for single line comment. Remove this entry if your language does not support line comments
		"lineComment": "//",
		// symbols used for start and end a block comment. Remove this entry if your language does not support block comments
		"blockComment": [ "/*", "*/" ]
	},
	// symbols used as brackets
	"brackets": [
		["[", "]"],
		["/*", "*/"]
	],
	// symbols that are auto closed when typing
	"autoClosingPairs": [
		["[", "]"],
		["'", "'"],
		["\"","\""],
		["/*", "*/"]
	],
	// symbols that can be used to surround a selection
	"surroundingPairs": [
		["[", "]"],
		["'", "'"],
		["\"","\""]
	],
	"autoCloseBefore": " \t\n",
	"folding": {
		"markers": {
			"start": "^\\s*/\\*.*$",
			"end": "^.*?\\*/\\s*$"
		}
	},
	"indentationRules": {
		"increaseIndentPattern": "^\\s*(\\.|[Bb][Ii][Tt][Ss]|[Dd][DdWw]|[Mm][Ii][Nn]([Rr][Ee][Gg]|[Hh][Ee][Aa][Pp]|[Ss][Tt][Aa][Cc][Kk])|[Rr][Uu][Nn])",
		"decreaseIndentPattern": "^\\s*(\\.|[Bb][Ii][Tt][Ss]|[Dd][DdWw]|[Mm][Ii][Nn]([Rr][Ee][Gg]|[Hh][Ee][Aa][Pp]|[Ss][Tt][Aa][Cc][Kk])|[Rr][Uu][Nn])"
	},
	"wordPattern": "((?<=^\\s*(\\*/)?\\s*)([a-zA-Z]+|@\\w*)|(?<=^|\\s|\\*/)\\.\\w*|(?<=\\s|\\*/)([#Mm][0-9]*|%\\w*|&[a-zA-Z]*|[$Rr]\\d?|(0[box])?\\d+))(?=\\s|$|/[*/])"
}